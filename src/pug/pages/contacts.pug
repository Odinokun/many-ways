extends ../_template

block variables
  - let title       = 'Many Ways'
  - let description = 'Many Ways'
  - let breadcrumbs = 'Contacts us'

block content
  #main-wrap.main-wrap
    include ../sections/header

    //begin content
    main.main
      include ../elements/breadcrumbs

      //BEGIN contacts
      .contacts
        .container
          h2.contacts__title.title Contact us

          .contacts__items
            a(href="https://goo.gl/maps/fudd7QjeS9LMboK9A" target="_blank" rel="nofollow noopener noreferrer").contacts__item
              .contacts__item-icon
                +svg('marker')
              span 2008 Maryland Ave, Baltimore, MD 21218, USA
            a(href="tel:+18008889999").contacts__item
              .contacts__item-icon
                +svg('smartphone')
              span 1-800-888-9999
            a(href="mailto:hello@manyways.com").contacts__item
              .contacts__item-icon
                +svg('mail')
              span hello@manyways.com
            .contacts__socials
              .contacts__socials-title follow us in socials:
              a(href="#" target="_blank" rel="nofollow noopener noreferrer").contacts__social
                +svg('inst')
              a(href="#" target="_blank" rel="nofollow noopener noreferrer").contacts__social
                +svg('twitter')
              a(href="#" target="_blank" rel="nofollow noopener noreferrer").contacts__social
                +svg('fb')
      //END   contacts

      #map.map
    //end content

    include ../sections/footer
    include ../elements/popup
    include ../sections/scripts
    script(src="https://maps.googleapis.com/maps/api/js?AIzaSyAIqxNjdVCl64_P7FjEShcu6Yj1AG0rT0Y=&callback=initMap" async defer)
    script.
      function initMap() {
        const myLatLng = {lat: -25.363, lng: 131.044};
        const map = new google.maps.Map(document.getElementById("map"), {
          zoom: 4,
          center: myLatLng,
        });

        new google.maps.Marker({
          position: myLatLng,
          map,
          title: "Hello World!",
        });
      }

